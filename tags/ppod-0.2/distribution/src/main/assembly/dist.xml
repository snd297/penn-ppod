<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
	<id>dist</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>../</directory>
			<includes>
				<include>LICENSE.txt</include>
				<include>NOTICE.txt</include>
			</includes>
			<outputDirectory></outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../cdm/target/site/apidocs</directory>
			<outputDirectory>docs/javadocs</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../config</directory>
			<outputDirectory>config</outputDirectory>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<!-- for useProjectArtifact, just following orders: see http://www.sonatype.com/books/mvnref-book/reference/assemblies-sect-output-algorithm.html#assemblies-sect-transitive -->
			<useProjectArtifact>false</useProjectArtifact>
			<unpack>true</unpack>
			<includes>
				<include>edu.upenn.cis.ppod:ppod-services</include>
			</includes>
			<outputDirectory>ppod-services.war</outputDirectory>
		</dependencySet>
	</dependencySets>
</assembly>
