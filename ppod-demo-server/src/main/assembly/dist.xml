<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
	<id>dist</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>../</directory>
			<includes>
				<include>LICENSE.txt</include>
			</includes>
			<outputDirectory></outputDirectory>
			<fileMode>0664</fileMode>
		</fileSet>
		<fileSet>
			<directory>src/main/scripts/</directory>
			<outputDirectory></outputDirectory>
			<fileMode>0775</fileMode>
		</fileSet>
		<fileSet>
			<directory>src/main/config/</directory>
			<outputDirectory>config</outputDirectory>
			<fileMode>0664</fileMode>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/db/</directory>
			<outputDirectory>/db/</outputDirectory>
			<useDefaultExcludes>true</useDefaultExcludes>
			<fileMode>0664</fileMode>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<includes>
				<include>${artifact.groupId}:${artifact.artifactId}</include>
			</includes>
			<fileMode>0664</fileMode>
		</dependencySet>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<!-- for useProjectArtifact, see http://www.sonatype.com/books/mvnref-book/reference/assemblies-sect-output-algorithm.html#assemblies-sect-transitive -->
			<useProjectArtifact>false</useProjectArtifact>
			<scope>runtime</scope>
			<fileMode>0664</fileMode>
		</dependencySet>
	</dependencySets>
</assembly>
